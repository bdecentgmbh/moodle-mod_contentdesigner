{{!
    @template element_chapter/progressbar

    Template for the chapter completion progressbar

    Example context (json):
    {
        "chapters": [{
            "id": 1,
            "completion": true
        }, {
            "id": 2,
            "completion": false
        }]
    }
}}
<div id="contentdesigner-progressbar">
    {{#chapters}}
    <div class="contentdesigner-chapter {{#completion}} chapter-completed{{/completion}}" data-chapter="{{id}}">
        <label class="{{#completion}}label-bg-success{{/completion}}"></label>
    </div>
    {{/chapters}}
</div>
